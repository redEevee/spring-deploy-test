# Server
SERVER_PORT=8080
SPRING_APPLICATION_NAME=board-app

# H2 DB
SPRING_DATASOURCE_URL=jdbc:h2:mem:testdb
SPRING_DATASOURCE_USERNAME=sa
SPRING_DATASOURCE_PASSWORD=1234
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.h2.Driver
SPRING_DATASOURCE_DIALECT=org.hibernate.dialect.H2Dialect

# JPA
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=true
SPRING_JPA_OPEN_IN_VIEW=true
SPRING_JPA_DATABASE=default
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_GENERATE_DDL=true
SPRING_JPA_HIBERNATE_DDL_AUTO=update

# Redis (옵션)
SPRING_DATA_REDIS_HOST=localhost
SPRING_DATA_REDIS_PORT=6379
SPRING_DATA_REDIS_PASSWORD=1234

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Kakao OAuth (필요 시)
KAKAO_LOGIN_URL=https://kauth.kakao.com/oauth/authorize
KAKAO_CLIENT_ID=YOUR_CLIENT_ID
KAKAO_REDIRECT_URI=http://localhost:8080/oauth/kakao/callback
KAKAO_TOKEN_REQUEST_URI=https://kauth.kakao.com/oauth/token
KAKAO_USER_INFO_REQUEST_URI=https://kapi.kakao.com/v2/user/me

CLAUDE.md
